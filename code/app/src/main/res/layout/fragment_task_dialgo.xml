<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dialog.TaskDialogFragment">


    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="386dp"
        android:layout_height="176dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/radious_on_layour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView_task_type"
            android:layout_width="310dp"
            android:layout_height="61dp"
            android:layout_above="@+id/textView_schedule"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="-17dp"
            android:text="Evento: Medicação"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/textView_schedule"
            android:layout_width="312dp"
            android:layout_height="41dp"
            android:layout_above="@+id/textView_quantity"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="1dp"
            android:text="Horário: 09:00 às 10:00"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/textView_quantity"
            android:layout_width="148dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="19dp"
            android:text="Quantidade: 2"
            android:textSize="@dimen/_18sdp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_snooze"
        android:layout_width="131dp"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_skip"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_skip"
        android:layout_width="148dp"
        android:layout_height="127dp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:rotation="45"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_completed"
        android:layout_width="129dp"
        android:layout_height="111dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_snooze"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4" />


</androidx.constraintlayout.widget.ConstraintLayout>