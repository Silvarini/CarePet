<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".dialog.DialogMedicationFragment">


    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="465dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textview_dialogue"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="35dp"
            android:text="TextView"
            android:textSize="@dimen/_20sdp" />

        <ImageView
            android:id="@+id/image_dialogue"
            android:layout_width="183dp"
            android:layout_height="177dp"
            android:layout_below="@+id/textview_dialogue"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="113dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/image_dialogue"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/round_button"
            android:text="C" />

        <Button
            android:id="@+id/button_snooze"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/image_dialogue"
            android:layout_marginStart="42dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="42dp"
            android:layout_toStartOf="@+id/button_skip"
            android:layout_toEndOf="@+id/button_confirm"
            android:background="@drawable/round_button"
            android:text="S" />

        <Button
            android:id="@+id/button_skip"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/image_dialogue"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="67dp"
            android:background="@drawable/round_button"
            android:text="S" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>